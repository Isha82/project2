  <body>
    <div class="container">
     <h1>Login</h1>
    <br>
  <br>
     
    <form action="/home" method="post">
      <label for="username"><h3>Username:</h3> </label>
      <input
        type="text"
        name="user[username]"
        id="username"
        placeholder="Username"
        required
      />
      <br>
      <br>
      <br>
      <label for="password"><h3>Password:</h3> </label>
      <input
        type="password"
        name="user[password]"
        id="password"
        required
        minlength="8"
      /><br>
      <br>
      <br>
      <br>

      <div class="ber">
      <button>Submit</button></div>
    </form>
   
    
    
    <p>New User? <a href="/signup">Sign Up</a></p>
    </div>
  </body>
